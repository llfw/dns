; vim:set ft=eruby.bindzone sw=8 ts=8 sts=8:

$TTL <%= ttl %>
$ORIGIN <%= zone %>.

@	SOA	<%= soa_mname %> <%= soa_rname %> (
		<%= soa_serial %>
		<%= soa_refresh %>
		<%= soa_retry %>
		<%= soa_expire %>
		<%= soa_minimum %>
	)

<% nameservers.split.each do |ns| %>
        NS      <%= ns %>.
<% end %>

	CAA	128 issue "letsencrypt.org;validationmethods=dns-01"
	TXT	"v=spf1 -all"
